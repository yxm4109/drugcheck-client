<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe1e0de"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="fill_parent"
        android:layout_height="28sp"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_vertical"
        android:paddingLeft="3dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"

        android:background="@color/colorPrimary"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_main_codeInput"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#ffe1e0de"
            android:gravity="center"
            android:hint="@string/please_input_ele_sup_code" />

        <Button
            android:id="@+id/btn_main_scanStart"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/start_scan_barcode_small_jpg"
            android:gravity="center" />
    </LinearLayout>


    <ListView
        android:id="@+id/lv_infos_main_activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

</LinearLayout>